{
  "name": "tfchain_client_ts",
  "version": "1.0.0",
  "description": "A client for TF chain",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "build": "npm-run-all es6-build node-build",
    "node-build": "tsc --build tsconfig-node.json",
    "es6-build": "tsc --build tsconfig-es6.json",
    "lint": "eslint -c .eslintrc.json . --fix",
    "check-lint": "eslint -c .eslintrc.json .",
    "generate-docs": "typedoc --tsconfig tsconfig-es6.json src/index.ts --out docs/api",
    "serve-docs": "http-server docs/api"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AhmedHanafy725/tfchain_client_ts.git"
  },
  "keywords": [
    "tfchain"
  ],
  "author": "Ahmed Hanafy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AhmedHanafy725/tfchain_client_ts/issues"
  },
  "homepage": "https://github.com/AhmedHanafy725/tfchain_client_ts#readme",
  "main": "./dist/node/index.js",
  "module": "./dist/es6/index.js",
  "exports": {
    "require": "./dist/node/index.js",
    "import": "./dist/es6/index.js"
  },
  "types": "dist/es6/index.d.ts",
  "files": [
    "/dist"
  ],
  "lint-staged": {
    "*.{ts,js}": [
      "eslint -c .eslintrc.json --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.5",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.28",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@polkadot/api": "^10.1.4",
    "await-lock": "^2.2.2",
    "axios": "^1.3.6",
    "bip39": "^3.1.0"
  }
}
